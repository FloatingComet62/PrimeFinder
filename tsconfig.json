{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "watchOptions": {
    "excludeDirectories": [
      "node_modules",
      "dist"
    ],
    "excludeFiles": [
      "test.ts"
    ],
  }
}
